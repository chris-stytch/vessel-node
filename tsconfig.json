{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"],
}
